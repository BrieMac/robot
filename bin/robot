#!/usr/bin/env ruby

$LOAD_PATH.push("#{__dir__}/../lib/")

require 'robot'
require 'point'
require 'battery'
require 'trip'

puts 'Please give your robot a name:'

name = gets.chomp

robot = Robot.new(name)
20.times { print '#' }
puts "\n"
puts robot.introduce
puts robot.location
puts robot.battery_level
20.times { print '#' }
puts "\n"
puts "You can ask #{name} to move to a new location by giving it x, y coordinates"
puts "\n"
puts "Please give #{name} an x coordinate"

x = gets.chomp.to_i

puts "Please give #{name} a y coordinate"

y = gets.chomp.to_i

future_location = Point.new(x, y)
20.times { print '#' }
puts robot.plan_trip(future_location)
20.times { print '#' }
